<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDSApp.NewPost">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Send" Text="Send" Activated="OnClickSendPost"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <!-- Post Title -->
            <Entry  Placeholder="Title"/>
            <!-- Post Description -->
            <Editor VerticalOptions="FillAndExpand"/>
            <!-- Upload Image button -->
            <Button Text="Upload a photo" Clicked="OnClickAddPhotoAsync"/>
            <!-- Send location button -->
            <Button Text="Send your location"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>